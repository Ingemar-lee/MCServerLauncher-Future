<Page x:Class="MCServerLauncher.WPF.Console.View.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCServerLauncher.WPF.Console.View"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BoardPage">

    <Grid Margin="35,35,35,0">
        <ui:ScrollViewerEx>
            <ikw:SimpleStackPanel Spacing="10">
                <Border Style="{StaticResource StyledBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="15,15,15,10" Grid.Column="0" Grid.Row="0" Text="实例 RAM 占用" VerticalAlignment="Top"/>
                        <TextBlock Margin="15,15,15,10" Grid.Column="1" Grid.Row="0" x:Name="MemoryStatusTextBlock" Text="0.00 MB / 1145.14 MB" TextAlignment="Right"/>
                        <ui:ProgressBar Grid.ColumnSpan="2" Grid.Row="1" Value="50" x:Name="MemoryStatusProgressBar" VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
                <Border Style="{StaticResource StyledBorder}" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0" Text="实例 CPU 占用" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <ui:ProgressBar Grid.Column="1" Grid.Row="0" Value="50" x:Name="CPUStatusProgressBar" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" x:Name="CPUStatusTextBlock" Text="11.45 %" TextAlignment="Right"/>
                    </Grid>
                </Border>
                <Border Style="{StaticResource StyledBorder}" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="当前 WebSocket 延迟" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" x:Name="WebSocketPingStatusTextBlock" Text="11 ms" TextAlignment="Right"/>
                    </Grid>
                </Border>
            </ikw:SimpleStackPanel>
        </ui:ScrollViewerEx>
    </Grid>
</Page>
