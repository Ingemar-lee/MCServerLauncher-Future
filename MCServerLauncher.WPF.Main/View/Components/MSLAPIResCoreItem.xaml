<UserControl x:Class="MCServerLauncher.WPF.Main.View.Components.MSLAPIResCoreItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCServerLauncher.WPF.Main.View.Components"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="165">
    <Border Style="{StaticResource StyledBorder}" Width="170" Height="40" x:Name="CoreItemBorder">
        <Grid Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="10,0,5,0" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" x:Name="CoreNameReplacer"/>
        </Grid>
    </Border> 
</UserControl>
