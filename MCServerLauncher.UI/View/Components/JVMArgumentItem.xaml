<UserControl x:Class="MCServerLauncher.UI.View.Components.JVMArgumentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="-10,5,-5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox ScrollViewer.VerticalScrollBarVisibility="Disabled" x:Name="ArgumentTextBox" Grid.Column="0" TextWrapping="Wrap" ui:ControlHelper.PlaceholderText="JVM 参数" Margin="0,0,5,0"/>
        <Button Click="DeleteArgument" Grid.Column="1" Height="32">
            <Button.Content>
                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Delete}" FontSize="16"/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
